{
  "name": "jlight",
  "version": "1.1.0",
  "description": "Lightweight JQuery alternative",
  "author": "Patrick Rupp",
  "license": "MIT",
  "scripts": {
    "build": "webpack -p",
    "dev": "webpack",
    "serve": "webpack-dev-server --serve --host 0.0.0.0 --port 80",
    "watch": "webpack --watch",
    "docs": "jsdoc2md index.js > ./docs/docs.md && ./node_modules/.bin/jsdoc --configure jsdoc.json",
    "update-docs": "yarn upgrade clean-jsdoc-theme && yarn docs"
  },
  "devDependencies": {
    "clean-jsdoc-theme": "git+https://github.com/Brainshaker95/clean-jsdoc-theme.git",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^34.2.2",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-string-replace-plugin": "^1.1.0",
    "jsdoc": "^3.6.7",
    "jsdoc-to-markdown": "^7.0.1",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Brainshaker95/jlight.git"
  },
  "files": [
    "index.js"
  ]
}
